						table
							style tr{height: 2em}
							tr
								th(colspan=2) Tabla de primitivas
							tr
								th $f(x)$
								th $\int f(x) dx$
							tr
								td $K$ (Constante)
								td $K\cdot x+C$
							tr
								td $x^n$ ($n\neq -1$)
								td $\frac{x^{n+1}}{n+1}+C$
							tr
								td $x^{-1}=\frac{1}{x}$
								td $\ln|x|+C$
							tr
								td $e^x$
								td $e^x+C$
							tr
								td $\cos(x)$
								td $\sin(x)+C$
							tr
								td $\sin(x)$
								td $-\cos(x)+C$
							tr
								td $\frac {1}{1+x^2}$
								td $\arctan(x)+C$
